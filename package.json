{
  "name":"eventest",
  "version": "0.1.0",
  "description": "An end-to-end testing tool for Event Driven systems, allowing you to run full integration tests and await the events you expect to see as your business logic runs",
  "license": "MIT",
  "author": {"name": "Ciaran O'Donnell", "url": "https://ciaranodonnell.dev"},
  "keywords": ["testing", "event driven architecture", "integration tests"],
  "main":"eventest.js",
  "repository": {"type": "git", "url": "https://github.com/ciaranodonnell/eventually"},
  "dependencies": {
    "@azure/service-bus": "^7.4.0",
    "@types/node": "^16.11.7",
    "@types/uuid": "^8.3.1",
    "dotenv": "^10.0.0",
    "moment": "^2.29.1",
    "node-fetch": "^2.6.6",
    "uuid": "^8.3.2",
    "@types/chai": "^4.2.22",
    "@types/mocha": "^9.0.0",
    "chai": "^4.3.4",
    "jest": "^27.3.1",
    "mocha": "^9.1.3",
    "mocha-junit-reporter": "^2.0.2",
    "ts-node": "^10.4.0"
  },
  "scripts": {
    "ci-all-tests": "mocha ./dist/*.test.js --timeout 30000 --reporter mocha-junit-reporter --exit",
    "test": "mocha ./dist/*.test.js --timeout 30000 --exit",
    "build": "tsc",
    "build:watch": "tsc --watch",
    "lint": "tslint --project \"./tsconfig.json\""
  }
}
