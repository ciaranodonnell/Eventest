{
  "compilerOptions": {
    "target": "ES2018",
    "module": "commonjs",
    "lib":["ES2017"],
    "declaration": true,
    "moduleResolution": "Node",
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "alwaysStrict": true,
    "outDir": "dist",
    "rootDir": "src",
    "inlineSourceMap": true
  },
  "include": [
    "scripts/**/*.ts", 
    "src/**/*.ts", 
    "node_modules/lodash-es/**/*.js"
  ]
}