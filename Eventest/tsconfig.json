{
  "compilerOptions": {
    "target": "ES2018",
    "module": "ES2015",
    "declaration": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "alwaysStrict": true,
    "outDir": "dist",
    "rootDir": "src",
    "sourceMap": true
  },
  "include": [
    "src/**.ts"
  ]
}